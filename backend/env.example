# Viviz Bulk Sender - Environment Variables Template
# Copy this file to .env and fill in the values

# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-min-32-characters
DJANGO_DEBUG=False

# Database (PostgreSQL - use Railway's internal URL)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Redis (for Celery - use Railway's internal URL)
REDIS_URL=redis://:password@host:6379/0

# Celery Broker URL
CELERY_BROKER_URL=redis://:password@host:6379/0

# Green API Credentials (get from https://green-api.com)
GREEN_API_ID=your-green-api-id
GREEN_API_TOKEN=your-green-api-token

# Stripe API Keys (get from https://stripe.com)
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# AWS S3 (for file storage - optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# Email Settings (SendGrid)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Allowed Hosts
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
