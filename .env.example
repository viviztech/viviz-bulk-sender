# Viviz Bulk Sender - Environment Variables
# Copy this file to .env and fill in the values

# ===============
# Django Settings
# ===============
DEBUG=0
SECRET_KEY=your-super-secret-key-min-50-characters-here
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ===============
# Database (PostgreSQL)
# ===============
POSTGRES_DB=viviz_bulk_sender
POSTGRES_USER=viviz_user
POSTGRES_PASSWORD=secure-password-here
# DATABASE_URL is auto-constructed from above values in docker-compose

# ===============
# Redis
# ===============
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0

# ===============
# JWT Authentication
# ===============
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# ===============
# Green API Credentials
# Get from https://greenapi.com
# ===============
GREEN_API_ID=your-green-api-id
GREEN_API_TOKEN=your-green-api-token
GREEN_API_URL=https://api.green-api.com

# ===============
# CORS Settings
# ===============
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ===============
# Frontend URL (for API responses)
# ===============
VITE_API_URL=http://localhost:8000/api/v1
VITE_WS_URL=ws://localhost:8000/ws

# ===============
# Stripe (Optional - for payments)
# Get from https://stripe.com
# ===============
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ===============
# Email Settings (Optional)
# ===============
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=1
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ===============
# Gunicorn (Optional override)
# ===============
GUNICORN_BIND=0.0.0.0:8000
